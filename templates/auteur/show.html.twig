{% extends 'base.html.twig' %}

{% block title %}Auteur{% endblock %}

{% block body %}
    <div class="jumbotron">
        <a class="badge badge-light" href="{{ path('auteur_index') }}">back to list</a>
        <h1>Auteur</h1>
    </div>

    <div class="container">
        <table class="table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ auteur.id }}</td>
                </tr>
                <tr>
                    <th>Nom</th>
                    <td>{{ auteur.nom }}</td>
                </tr>
                <tr>
                    <th>Pr√©nom</th>
                    <td>{{ auteur.prenom }}</td>
                </tr>

                <tr>
                    <th>Livres</th>
                    <td><ul>
                    </ul>
                    {% for livre in auteur.livres %}
                        <li>
                            <a href="{{ path('livre_show', {'id': livre.id}) }}">{{ livre.titre }}</a>
                        </li>
                    {% endfor %}
                    </td>
                </tr>
            </tbody>
        </table>
    </div>


    {% if is_granted('ROLE_ADMIN') %}
    <a class="btn btn-primary" href="{{ path('admin_auteur_edit', {'id': auteur.id}) }}">edit</a>

    {{ include('auteur/_delete_form.html.twig') }}
    {% endif %}
{% endblock %}
