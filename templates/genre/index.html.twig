{% extends 'base.html.twig' %}

{% block title %}Genre index{% endblock %}

{% block body %}
    <div class="jumbotron">
        <h1 class="display-4">Genre index</h1>
        {% if is_granted('ROLE_ADMIN') %}
        <a class="btn btn-primary btn-lg" href="{{ path('admin_genre_new') }}" role ="button">Create new</a>
        {% endif %}
    </div>
    
    
    <div class="container">
        <table class="table table-striped table-responsive">
            <thead class="thead-dark">
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for genre in genres %}
            <tr>
                <td>{{ genre.id }}</td>
                <td>{{ genre.nom }}</td>
                <td>
                    <a class="badge badge-light"  href="{{ path('genre_show', {'id': genre.id}) }}">show</a>
                    {% if is_granted('ROLE_ADMIN') %}
                    <a class="badge badge-light"  href="{{ path('admin_genre_edit', {'id': genre.id}) }}">edit</a>
                    {% endif %}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
