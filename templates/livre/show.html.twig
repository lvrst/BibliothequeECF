{% extends 'base.html.twig' %}

{% block title %}Livre{% endblock %}

{% block body %}
<div class="jumbotron">
    {% if is_granted('ROLE_ADMIN') %}
    <a class="badge badge-light" href="{{ path('livre_index') }}">back to list</a>
    {% elseif is_granted('ROLE_EMPRUNTEUR') %}
    <a class="badge badge-light" href="{{ path('app_index') }}">back to list</a>
    {% endif %}
    <h1>Livre</h1>
</div>

<div class="container">
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ livre.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ livre.titre }}</td>
            </tr>
            <tr>
                <th>Auteur</th>
                <td>{{ livre.auteur.prenom }} {{ livre.auteur.nom }}</td>
            </tr>
            <tr>
                <th>Genre(s)</th>
                <td>
                    <p>
                    {% for genre in livre.genres %}
                    {{ genre.nom }}{% if not loop.last %}, {% endif %}
                    {% endfor %}
                    </p>
                </td>
            </tr>
            <tr>
                <th>Année d'édition</th>
                <td>{{ livre.anneeEdition }}</td>
            </tr>
            <tr>
                <th>Nombre de pages</th>
                <td>{{ livre.nombrePages }}</td>
            </tr>
            <tr>
                <th>Code ISBN</th>
                <td>{{ livre.codeIsbn }}</td>
            </tr>
        </tbody>
    </table>
</div>

    {% if is_granted('ROLE_ADMIN') %}
    <a class="btn btn-primary" href="{{ path('admin_livre_edit', {'id': livre.id}) }}">edit</a>
    {% endif %}

    {% if is_granted('ROLE_ADMIN') %}
    {{ include('livre/_delete_form.html.twig') }}
    {% endif %}
{% endblock %}
