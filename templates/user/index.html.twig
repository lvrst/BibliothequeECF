{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    <div class="jumbotron">
        <h1 class="display-4">User index</h1>
        {% if is_granted('ROLE_ADMIN') %}
        <a class="btn btn-primary btn-lg" href="{{ path('admin_user_new') }}" role ="button">Create new</a>
        {% endif %}
    </div>

    <div class="container">
        <table class="table table-striped table-responsive">
            <thead class="thead-dark">
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th>RÃ´les</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.email }}</td>
                <td>
                    <p>
                    {% for role in user.roles %}
                    {{ role }}{% if not loop.last %}, {% endif %}
                    {% endfor %}
                    </p>
                </td>
                <td>
                    <a class="badge badge-light" href="{{ path('user_show', {'id': user.id}) }}">show</a>
                    {% if is_granted('ROLE_ADMIN') %}
                    <a class="badge badge-light" href="{{ path('user_edit', {'id': user.id}) }}">edit</a>
                    {% endif %}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
